{
    "tasks": [{
        "type": "shell",
        "label": "g++ build active file",
        "command": "/usr/bin/g++",
        "args": [
            "-g",
            "${file}",
            "-o",
            "${fileDirname}/${fileBasenameNoExtension}"
        ],
        "options": {
            "cwd": "/usr/bin"
        }
    }, {
        "label": "make and build",
        "type": "shell",
        "command": "cd ${workspaceRoot} && make"
    }],
    "version": "2.0.0"
}